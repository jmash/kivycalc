#:kivy 1.9.1

# this defines a template that makes every calculator button
# have a font size of 25.
<CalcButton@Button>:
    font_size: 25

<CalcDisplay>:
    disabled: True
    halign: "right"
    padding_y: [10, 0]
    font_size: 25

<MainScreen>:
    cDisplay: c_display # this is where the CalcDisplay widget is linked into the MainScreen.
                        # it allows values to be passed from events within the children back up
                        # to the CalcDisplay, which is where the calculations are done and shown 

    BoxLayout:
        orientation: "vertical"

        GridLayout:
            cols: 1
            row_force_default: True
            row_default_height: 50

            CalcDisplay:
                id: c_display
                

        GridLayout:
            
            cols: 4
            rows: 5
            
            # row 1
            CalcButton:
                on_press: c_display.press_button("CE")
                text: "CE"

            CalcButton:
                text: "x^y"
                on_press: c_display.press_button("x^y")

            CalcButton:
                text: "sqrt"
                on_press: c_display.press_button("sqrt")

            CalcButton:
                text: "÷"
                on_press: c_display.press_button("÷")

            #row 2
            CalcButton:
                text: "7"
                on_press: c_display.press_button("7")

            CalcButton:
                text: "8"
                on_press: c_display.press_button("8")

            CalcButton:
                text: "9"
                on_press: c_display.press_button("9")
            
            CalcButton:
                text: "×"
                on_press: c_display.press_button("×")

            #row 3
            CalcButton:
                text: "4"
                on_press: c_display.press_button("4")

            CalcButton:
                text: "5"
                on_press: c_display.press_button("5")

            CalcButton:
                text: "6"
                on_press: c_display.press_button("6")

            CalcButton:
                text: "-"
                on_press: c_display.press_button("-")

            #row 4
            CalcButton:
                text: "1"
                on_press: c_display.press_button("1")

            CalcButton:
                text: "2"
                on_press: c_display.press_button("2")

            CalcButton:
                text: "3" 
                on_press: c_display.press_button("3")

            CalcButton:
                text: "+"
                on_press: c_display.press_button("+")

            #row 5
            CalcButton:
                text: "."
                on_press: c_display.press_button(".")
                background_color: [.5, .5, .5, 1]

            CalcButton:
                text: "0"
                on_press: c_display.press_button("0")

            CalcButton:
                text: "%"
                on_press: c_display.press_button("%")

            CalcButton:
                text: "="
                on_press: c_display.press_button("=")